{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Base Renovate preset for basher83 repositories - provides common settings for PR management, security alerts, and semantic commits",
  "extends": [
    "config:best-practices",
    "workarounds:all",
    "local>basher83/renovate-config//presets/mise.json",
    "local>basher83/renovate-config//presets/github-actions-security.json"
  ],
  "timezone": "America/New_York",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "labels": [
    "renovate"
  ],
  "assignees": [
    "basher83"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": true
  }
}
