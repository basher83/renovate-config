{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Ansible preset - collection/role updates",
  "packageRules": [
    {
      "description": "Auto-merge Ansible collection patch updates (PR merge)",
      "matchManagers": [
        "ansible",
        "ansible-galaxy"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Group Ansible collection minor updates",
      "matchManagers": [
        "ansible",
        "ansible-galaxy"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "Ansible Collections (Minor)"
    },
    {
      "description": "Require approval for Ansible collection major updates",
      "matchManagers": [
        "ansible",
        "ansible-galaxy"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Label Ansible PRs",
      "matchManagers": [
        "ansible",
        "ansible-galaxy"
      ],
      "addLabels": [
        "ansible",
        "configuration-management"
      ]
    }
  ]
}
