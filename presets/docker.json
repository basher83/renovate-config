{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Docker preset - auto-merges patch updates and groups/auto-merges digest updates",
  "packageRules": [
    {
      "description": "Auto-merge Docker patch updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group Docker digest updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "groupName": "docker-digests",
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
