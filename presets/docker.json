{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Docker security preset - pins to digests, auto-merges safe changes, requires approval for higher-risk ones",
  "packageRules": [
    {
      "description": "Pin Docker images to digests for security",
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "description": "Group & auto-merge Docker digest updates (PR merge)",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "groupName": "Docker Digests",
      "automerge": true
    },
    {
      "description": "Auto-merge Docker patch updates (PR merge)",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Auto-merge non-sensitive Docker minor updates (PR merge)",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "matchPackageNames": [
        "!/^postgres$/",
        "!/^mysql$/",
        "!/^redis$/",
        "!/^mongo/",
        "!/^elasticsearch$/",
        "!/^rabbitmq$/",
        "!/^kafka$/",
        "!/^nginx$/",
        "!/^traefik$/",
        "!/^envoyproxy//"
      ]
    },
    {
      "description": "Require approval for critical Docker minor updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "/^postgres$/",
        "/^mysql$/",
        "/^redis$/",
        "/^mongo/",
        "/^elasticsearch$/",
        "/^rabbitmq$/",
        "/^kafka$/",
        "/^nginx$/",
        "/^traefik$/",
        "/^envoyproxy//"
      ]
    },
    {
      "description": "Require approval for all Docker major updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Label Docker PRs",
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "docker",
        "dependencies"
      ]
    }
  ]
}
