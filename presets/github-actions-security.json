{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "GitHub Actions security preset - groups all updates, auto-merges digests/patches/minor, requires dashboard approval for majors",
  "packageRules": [
    {
      "description": "Pin GitHub Actions to commit SHA digests for security",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "description": "Group all GitHub Actions updates together",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions"
    },
    {
      "description": "Auto-merge GitHub Actions digest updates (silent)",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Auto-merge GitHub Actions patches and minor updates (silent)",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Require approval for security-sensitive action updates (major + minor)",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "/^actions/checkout/",
        "/^actions/upload-artifact/",
        "/^actions/download-artifact/",
        "/^aws-actions//",
        "/^google-github-actions//",
        "/^azure//",
        "/^docker//"
      ]
    },
    {
      "description": "Require approval for non-sensitive major GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "!/^actions/checkout/",
        "!/^actions/upload-artifact/",
        "!/^actions/download-artifact/",
        "!/^aws-actions//",
        "!/^google-github-actions//",
        "!/^azure//",
        "!/^docker//"
      ]
    },
    {
      "description": "Label GitHub Actions PRs",
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions",
        "security"
      ]
    }
  ]
}
