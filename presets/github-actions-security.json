{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "GitHub Actions security preset - groups all updates, auto-merges low-risk changes into main, requires dashboard approval for security-sensitive updates",
  "packageRules": [
    {
      "description": "Pin GitHub Actions to commit SHA digests for security",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "description": "Group all GitHub Actions updates together",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions"
    },

    //
    // LOW-RISK: FULLY AUTOMERGE TO MAIN (PR MERGE)
    //

    {
      "description": "Auto-merge ALL GitHub Actions digest updates into main (no approval)",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true
      // automergeType defaults to "pr" â†’ PR gets merged & disappears
    },
    {
      "description": "Auto-merge non-sensitive GitHub Actions patch, minor, and major updates into main (no approval)",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchPackageNames": [
        "!/^actions\\/checkout/",
        "!/^actions\\/upload-artifact/",
        "!/^actions\\/download-artifact/",
        "!/^aws-actions\\//",
        "!/^google-github-actions\\//",
        "!/^azure\\//",
        "!/^docker\\//"
      ],
      "automerge": true
      // automergeType defaults to "pr"
    },

    //
    // HIGHER-RISK: REQUIRE MANUAL APPROVAL
    //

    {
      "description": "Require approval for security-sensitive GitHub Actions minor and major updates",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "/^actions\\/checkout/",
        "/^actions\\/upload-artifact/",
        "/^actions\\/download-artifact/",
        "/^aws-actions\\//",
        "/^google-github-actions\\//",
        "/^azure\\//",
        "/^docker\\//"
      ]
    },

    //
    // LABELING
    //

    {
      "description": "Label GitHub Actions PRs",
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions",
        "security"
      ]
    }
  ]
}
