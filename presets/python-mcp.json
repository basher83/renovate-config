{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Python MCP preset with 3.13 cap. Remove when https://github.com/modelcontextprotocol/python-sdk support is resolved",
  "extends": [
    "local>basher83/renovate-config//presets/python.json"
  ],
  "packageRules": [
    {
      "description": "Cap Python runtime to 3.13.x (MCP SDK doesn't support 3.14 yet)",
      "matchPackageNames": [
        "python"
      ],
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "allowedVersions": "<=3.13"
    },
    {
      "description": "Cap Python runtime to <3.14.0 when managed via mise (MCP SDK doesn't support 3.14 yet)",
      "matchManagers": [
        "mise"
      ],
      "matchPackageNames": [
        "python"
      ],
      "allowedVersions": "<3.14.0"
    },
    {
      "description": "Cap requires-python to <3.14 (MCP SDK compatibility)",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "requires-python"
      ],
      "allowedVersions": "<3.14"
    },
    {
      "description": "Require approval for MCP SDK major version updates",
      "matchPackageNames": [
        "mcp"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    }
  ]
}
