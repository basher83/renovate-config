{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Python project preset - auto-merges patches, groups linters and test tools",
  "extends": [
    ":preserveSemverRanges"
  ],
  "packageRules": [
    {
      "description": "Disable digest pinning for pyenv (.python-version) - format doesn't support digests",
      "matchManagers": [
        "pyenv"
      ],
      "pinDigests": false
    },
    {
      "description": "Auto-merge Python patch updates (PR merge)",
      "matchCategories": [
        "python"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Auto-merge Python dev dependency minor updates (PR merge)",
      "matchCategories": [
        "python"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Group & auto-merge Python test dependencies (PR merge)",
      "matchCategories": [
        "python"
      ],
      "matchPackageNames": [
        "/^pytest/"
      ],
      "groupName": "Python test dependencies",
      "automerge": true
    },
    {
      "description": "Group & auto-merge Python linting and dev tools (PR merge)",
      "matchCategories": [
        "python"
      ],
      "matchPackageNames": [
        "black",
        "ruff",
        "mypy",
        "flake8",
        "isort",
        "pylint",
        "uv"
      ],
      "groupName": "Python linters and dev tools",
      "automerge": true
    },
    {
      "description": "Group & auto-merge Python type stubs (PR merge)",
      "matchCategories": [
        "python"
      ],
      "matchPackageNames": [
        "/^types-/"
      ],
      "groupName": "Python type stubs",
      "automerge": true
    }
  ]
}
